general {
  output_format = "i3bar"
  color_good = "#859900"
  color_degraded = "#b58900"
  color_bad = "#cb4b16"
  interval = 5
}

# order += "ipv6"
# order += "wireless _first_"
# order += "ethernet _first_"
# order += "disk /"
order += "tztime local"
order += "battery 0"
order += "memory"
order += "load"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime mtv"
order += "read_file empty"

wireless _first_ {
  format_up = "W: (%quality at %essid, %bitrate) %ip"
  format_down = "W: down"
}

ethernet _first_ {
  format_up = "E: %ip (%speed)"
  format_down = "E: down"
}

